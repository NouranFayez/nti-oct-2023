{{>header}}
{{>navbar}}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{_id}}</td>
            <td>{{title}}</td>
            <td>
                <a href="/single/{{_id}}" class="btn btn-success mx-2">Show</a>
                {{#unless status}}
                <a href="/activate/{{_id}}" class="btn btn-primary mx-2">Activate task</a>
                {{/unless}}
                <a href="/del/{{_id}}" class="btn btn-danger mx-2">Delete</a>

                <a href="/edit/{{_id}}" class="btn btn-warning mx-2">Edit</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{>footer}}